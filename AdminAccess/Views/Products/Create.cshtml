@model AdminAccess.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h1 class="text-primary mb-4">Create New Product</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ProductId" class="control-label font-weight-bold">Product Id</label>
                <input asp-for="ProductId" class="form-control" placeholder="Enter product Id" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>


            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label font-weight-bold">Product Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label font-weight-bold">Price</label>
                <input asp-for="Price" class="form-control" placeholder="Enter price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="control-label font-weight-bold">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">Select a Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SupplierId" class="control-label font-weight-bold">Supplier</label>
                <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId">
                    <option value="">Select a Supplier</option>
                </select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="InventoryId" class="control-label font-weight-bold">Inventory</label>
                <select asp-for="InventoryId" class="form-control" asp-items="ViewBag.InventoryId">
                    <option value="">Select Inventory</option>
                </select>
                <span asp-validation-for="InventoryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PhotoUrl" class="control-label font-weight-bold">Product Photo URL</label>
                <input asp-for="PhotoUrl" class="form-control" placeholder="Enter photo URL" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>

            <div class="form-group text-right">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
