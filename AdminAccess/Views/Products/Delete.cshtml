@model AdminAccess.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h1 class="text-danger mb-4">Delete Product</h1>
        <h3 class="mb-4">Are you sure you want to delete this product?</h3>

        <div class="row mb-3">
            <div class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Name)</strong></div>
            <div class="col-sm-9">@Html.DisplayFor(model => model.Name)</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Price)</strong></div>
            <div class="col-sm-9">$@Html.DisplayFor(model => model.Price)</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.PhotoUrl)</strong></div>
            <div class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                {
                    <img src="@Model.PhotoUrl" alt="Product Image" class="img-fluid img-thumbnail" style="max-width: 150px;" />
                }
                else
                {
                    <span class="text-muted">No image available</span>
                }
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Category)</strong></div>
            <div class="col-sm-9">@Html.DisplayFor(model => model.Category.CategoryName)</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Inventory)</strong></div>
            <div class="col-sm-9">@Html.DisplayFor(model => model.Inventory.StockQuantity)</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Supplier)</strong></div>
            <div class="col-sm-9">@Html.DisplayFor(model => model.Supplier.Name)</div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <form asp-action="Delete" class="d-inline-block">
                <input type="hidden" asp-for="ProductId" />
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
            </form>

            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
