@model AdminAccess.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <h1 class="text-danger mb-4">Delete Category</h1>

    <div class="card shadow p-4">
        <div class="card-body">
            <h3 class="text-danger">Are you sure you want to delete this?</h3>
            <hr />

            <h4 class="card-title text-secondary">Category Details</h4>
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Category Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="CategoryId" />
                <div class="d-flex justify-content-between mt-4">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
