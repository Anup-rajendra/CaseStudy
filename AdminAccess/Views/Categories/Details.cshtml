@model AdminAccess.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-5">
    <h1 class="text-primary mb-4">Category Details</h1>

    <div class="card shadow p-4">
        <div class="card-body">
            <h4 class="card-title text-secondary">Details of Category</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Category Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-warning">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
